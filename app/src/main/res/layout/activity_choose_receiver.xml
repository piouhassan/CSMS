<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/writebg"
    tools:context=".Activity.ChooseReceiverActivity">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:background="@color/white"
         android:elevation="2dp"
         android:id="@+id/top"
         >

          <RelativeLayout

              android:layout_width="match_parent"
              android:layout_height="match_parent">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Envoyer le message"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/space10"
                   android:fontFamily="@font/ubuntufont"
                   />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Annuler"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:fontFamily="@font/ubuntufont"
                  android:id="@+id/soso"
                  android:layout_marginRight="@dimen/space20"
                  />
          </RelativeLayout>

     </LinearLayout>

     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginBottom="200dp"
         android:layout_below="@id/top"
         >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

               <RelativeLayout
                   android:id="@+id/Header"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="@dimen/space10"
                   android:background="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardCornerRadius="5dp">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical"
                             android:padding="@dimen/space10">


                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center_vertical"
                                  android:orientation="vertical">

                                   <EditText
                                       android:layout_width="match_parent"
                                       android:layout_height="50dp"
                                       android:background="@drawable/bg_ccv"
                                       android:fontFamily="@font/ubuntufont"
                                       android:hint="Entête  du message"
                                       android:id="@+id/header_content"
                                       android:maxLength="11"
                                       android:paddingLeft="@dimen/space10"
                                       android:layout_toLeftOf="@id/submit_header"
                                       android:textSize="13.5dp" />

                                   <TextView
                                       android:layout_width="50dp"
                                       android:layout_height="50dp"
                                       android:layout_alignParentRight="true"
                                       android:background="@color/colorPrimary"
                                       android:id="@+id/submit_header"
                                       android:src="@drawable/add"
                                       android:tint="@color/white"
                                       android:layout_marginLeft="@dimen/space10"
                                       android:gravity="center"
                                       android:text="+"
                                       android:textSize="40dp"
                                        android:textColor="@color/white"
                                       />
                              </RelativeLayout>

                         </LinearLayout>
                    </androidx.cardview.widget.CardView>

               </RelativeLayout>


               <RelativeLayout
                   android:id="@+id/choosedestinataire"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/Header"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="@dimen/space10"
                   android:background="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardCornerRadius="5dp">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical"
                             android:padding="@dimen/space20">


                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center_vertical"
                                  android:orientation="vertical">

                                   <RadioGroup
                                       android:id="@+id/destinataire"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_horizontal"
                                       android:layout_marginTop="@dimen/space10"
                                       android:gravity="center_horizontal"
                                       android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/tocontact"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/space10"
                                            android:checked="true"
                                            android:text="Contact" />

                                        <RadioButton
                                            android:id="@+id/togroup"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/space10"
                                            android:text="Groupe" />
                                   </RadioGroup>
                              </LinearLayout>

                         </LinearLayout>
                    </androidx.cardview.widget.CardView>

               </RelativeLayout>

               <LinearLayout
                   android:id="@+id/choose_receiver"
                   android:layout_width="match_parent"
                   android:layout_height="75dp"
                   android:visibility="gone"
                   android:layout_below="@+id/choosedestinataire"
                   android:layout_marginLeft="@dimen/space10"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="@dimen/space10"
                   android:background="#fff"
                   android:orientation="horizontal"

                   >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space10"
                        android:background="@drawable/bg_ccv"
                        android:src="@drawable/add"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_horizontal"
                        android:text="Selectionner le contact" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/choose_receiver_group"
                   android:layout_width="match_parent"
                   android:layout_height="75dp"
                   android:layout_below="@+id/choosedestinataire"
                   android:layout_marginLeft="@dimen/space10"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="@dimen/space10"
                   android:orientation="horizontal"
                   android:background="@color/white"
                   android:visibility="gone">

                    <Spinner
                        android:id="@+id/groupspinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/space10"
                        android:background="@drawable/spinner"
                        android:spinnerMode="dialog" />

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/choosedestinataire"
                   android:layout_marginTop="95dp"
                   android:id="@+id/contactChoose"
                   android:visibility="gone"
                   android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/choose_receiver"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginRight="@dimen/space10"

                        >

                         <com.mikhaellopez.circularimageview.CircularImageView
                             android:layout_width="50dp"
                             android:layout_height="match_parent"
                             android:src="@drawable/person" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:layout_marginLeft="60dp"
                             android:fontFamily="@font/ubuntufont"
                             android:text="Contact" />

                         <ImageView
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:layout_gravity="right"
                             android:layout_marginRight="@dimen/space10"
                             android:layout_marginTop="@dimen/space10"
                             android:padding="@dimen/space5"
                             android:src="@drawable/close2" />
                    </androidx.cardview.widget.CardView>
               </LinearLayout>

          </RelativeLayout>
     </androidx.core.widget.NestedScrollView>

     <TextView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:text="12 Fcs"
         android:layout_gravity="right"
         android:gravity="center"
         android:layout_marginLeft="40dp"
         android:fontFamily="@font/ubuntufont"
         android:layout_alignParentRight="true"
         android:layout_above="@id/message_show_zone"
         android:layout_marginBottom="-40dp"
         android:textColor="@color/white"
         android:background="@drawable/round_red"
         android:elevation="15dp"
         android:id="@+id/topay"
         />




     <RelativeLayout

         android:layout_marginTop="@dimen/space20"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:layout_above="@+id/sendmessagefinal"
         android:id="@+id/message_show_zone"
         >
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardCornerRadius="5dp"
              >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:padding="@dimen/space20"
                   >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Résumé"
                         android:layout_gravity="center"
                         android:fontFamily="@font/ubuntufont"
                         />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginTop="@dimen/space10"
                        android:layout_marginBottom="@dimen/space10"
                         />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Nombre de Caractère :"
                             android:fontFamily="@font/ubuntufont"
                             />
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="182"
                             android:id="@+id/letterscount"
                             android:layout_alignParentRight="true"
                             android:fontFamily="@font/ubuntufont"
                             />



                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginTop="@dimen/space10"
                        android:layout_marginBottom="@dimen/space10"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Entête Du message"
                             android:fontFamily="@font/ubuntufont"
                             />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:fontFamily="@font/ubuntufont"
                             android:layout_alignParentRight="true"
                              android:id="@+id/entete"
                             android:text="Lorem ipsum" />
                    </RelativeLayout>
               </LinearLayout>
          </androidx.cardview.widget.CardView>

     </RelativeLayout>

     <TextView
         android:id="@+id/sendmessagefinal"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_alignParentBottom="true"
         android:background="@color/colorPrimary"
         android:text="Suivant"
         android:gravity="center"
         android:textColor="@color/white"
         android:elevation="2dp"
         />
</RelativeLayout>